		$(document).ready(function(){
			$(window).scroll(function(){
				var scrollTop = $(window).scrollTop();
		    var num = document.getElementById('about-page').offsetTop;
		    if (scrollTop>num) {
		      $('.nav').addClass('fixed');
		    }else{
		      $('.nav').removeClass('fixed');
		    }
			});
		});
</script>

